<tr>
  <td class="<%= field.parent.present? ? 'leaf' : 'root' %>">
    <%= field.name %>
  </td>

  <td class="actions">
    <%= link_to fa('edit'),   edit_admin_lab_field_path(@lab, field), :class => 'btn btn-xs btn-primary' %>
    <%= link_to fa('remove'), admin_lab_field_path(@lab, field),      :class => 'btn btn-xs btn-danger', :data => { :confirm => "Supprimer cette expertise ?" }, :method => :delete %>
  </td>
</tr>

<%= render field.children %>

<% if field.parent.blank? %>
  <tr>
    <td class="leaf" colspan="2">
      <%= link_to 'Ajouter une sous-expertise', new_admin_lab_field_child_path(@lab, field) %>
    </td>
  </tr>
<% end %>
